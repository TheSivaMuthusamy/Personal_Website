= simple_form_for @post, html: { multipart: true } do |f|
    .row
        .col-md-12.text-center
            = f.error_notification
            .container-fluid
                .form-group.text-center
                    = f.input :title, label: false, placeholder: 'Add your title', input_html: {class: 'form-control'}
                .form-group.text-center
                    = f.input :body, as: :ckeditor, label: false, input_html: { ckeditor: { toolbar: 'Pure' }, class: 'form-control'}    
                .form-group.text-center
                    = f.button :submit, class: 'btn-success btn-block'
